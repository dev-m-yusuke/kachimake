<h2>新規投稿する</h2>

<div class="content-form">
  <%= form_with model: @post, local:true do |f| %>
    <div class="d-flex flex-column">
      <div class="p-2">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class:'form-control',rows:"2" %>
      </div>
      <div class="p-2">
      <%= f.label :content, '投稿内容' %>
      <%= f.text_area :content, class:'form-control',rows:"10" %>
      <%= f.file_field :images, multiple: true, class:'image-field' %>
      </div>
      <div class="p-2">
        <div class="d-grid gap-2 col-6 mx-auto">
        <%= f.submit '新規投稿する', class:'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>