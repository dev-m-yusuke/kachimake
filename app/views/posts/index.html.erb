<h2>新着投稿一覧</h2>

<% @posts.each do |post| %>
<div class="content-block">
  <div class="card">
    <div class="card-body">
  
      <h4 class="card-title">
        <%= post.title %>
      </h4>
      
      <div class='row p-2'>
      <div class='col-2 align-self-center'>
        <% if post.user.profile.image.attached? %>
        <%= image_tag post.user.profile.image ,class:'rounded-circle img-responsive'%>
        <% else %>
        <%= image_tag 'icon/nouser.png' %>
        <% end %>
      </div>
      <div class='col-10 align-self-center'>
            <div class="profile">
        <div class="personal-data">
          <div class="name">
            <%= "名前： #{post.user.profile.name}" %>  
          </div>
  
          <div class="age">
            <%= "年齢： #{post.user.profile.age}歳" %>  
          </div>
        </div>
        
        <div class="work-history">
          <div class="occupation">
            <%= "職種： #{post.user.profile.occupation}" %>  
          </div>
          
          <div class="experience">
            <%= "経験年数： #{post.user.profile.experience}歳" %>  
          </div>  
        </div>
      </div>
      </div>
      </div>


      <div class="post">
        <div class="card-text"><%= post.content %></div>
      </div>

      <% if post.images.attached? %>
      <div class="post-image">
      <% post.images.each do |image| %>
      <%= image_tag image %>
      <% end %>
      </div>
      <% end %>
      
      <div class="datetime">
        <div class="card-text">投稿日時：<%= post.created_at.strftime("%Y年%m月%-d日 %-H時%-M分") %></div>
      </div>
    </div>
  </div>  
</div>
<% end %>


